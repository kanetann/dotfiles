#autodetach on
#bell_msg "^G"
bind 'e' eval "encoding euc" "stuff 'export LANG=ja_JP.EUC-JP\012PERL_BADLANG=0\012export PERL_BADLANG\012'"
bind 'u' eval "encoding utf8" "stuff 'export LANG=ja_JP.UTF-8\012'"
bind h prev
bind j next
bind l windowlist
bind n screen
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"
#defencoding utf-8
#defhstatus screen@$HOSTNAME
#defkanji utf-8
#defscrollback 10000
#encoding utf-8 utf-8
escape ^Jj
#startup_message off
#vbell off

